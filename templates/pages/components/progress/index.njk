{% extends "layout_ui.njk" %}

{% block title %}progress{% endblock %}

{% block content %}
    <div class="j-container page-progress">
        <header class="page-header">
            <div class="page-title">Прогресс</div>
            <div class="page-label">компонент прогресса</div>
            <div class="page-import">@import <span class="token string">'node_modules/jcore-ui/lib/scss/components/progress.scss'</span>;</div>
            <div class="page-import">import <span class="token string">{ Progress } from 'jcore-ui'</span>;</div>
            <div class="page-import">import <span class="token string">Progress from 'jcore-ui/bin/lib/components/Progress'</span>;</div>
        </header>
        <content class="page-content">
            <div class="j-tabs" data-name="content">
                <div class="j-tabs-list">
                    <div class="j-tab" data-target="content1" data-active>Примеры и код</div>
                    <div class="j-tab" data-target="content2">Свойства и методы</div>
                </div>
                <div class="j-tab-wrapper">
                    <div class="j-tab-content" data-tab="content1" data-active>
                        <section class="page-section">
                            <div class="page-section-header">Использование</div>
                            {# <div class="page-section-label">
                            </div> #}
                            <div class="page-section-example">
                                <div class="j-progress" data-percent="50">
                                    <div class="j-progress-percent"></div>
                                    <div class="j-progress-bar"></div>
                                </div>
                            </div>
                            <div class="page-section-code">
<pre>
<code class="language-js">
const progresss = new Progress()
</code>
</pre>
                            </div>
                            <div class="page-section-code">
<pre>
<code class="language-markup" type="text/plain"><script type="text/plain" class="language-markup">
<div class="j-progress" data-percent="50">
    <div class="j-progress-percent"></div>
    <div class="j-progress-bar"></div>
</div>
</script></code>
</pre>
                            </div>
                        </section>
                    </div>
                    <div class="j-tab-content" data-tab="content2">
                        <section class="page-section">
                            <div class="page-section-header">Свойства и методы</div>
                            <div class="page-section-example property">
                                <div class="j-table-responsive">
                                    <table class="j-table" data-border-bottom>
                                        <caption>Параметры (Progress.options)</caption>
                                        <thead>
                                            <tr>
                                                <th>Название</th>
                                                <th>Значение по умолчанию</th>
                                                <th>Тип</th>
                                                <th>Описание</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>mount</td>
                                                <td>true</td>
                                                <td>boolean</td>
                                                <td>инициализация компонента</td>
                                            </tr>
                                            <tr>
                                                <td>name</td>
                                                <td>''</td>
                                                <td>string</td>
                                                <td>имя компонента</td>
                                            </tr>
                                            <tr>
                                                <td>percent</td>
                                                <td>0</td>
                                                <td>number</td>
                                                <td>значение процента</td>
                                            </tr>
                                            <tr>
                                                <td>type</td>
                                                <td>line</td>
                                                <td>boolean</td>
                                                <td>тип прогресса</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                                <div class="j-table-responsive">
                                    <table class="j-table" data-border-bottom>
                                        <caption>Обработчик событий (Progress.on)</caption>
                                        <thead>
                                            <tr>
                                                <th>Название</th>
                                                <th>Значение по умолчанию</th>
                                                <th>Тип</th>
                                                <th>Описание</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>mount</td>
                                                <td>(ctx) =></td>
                                                <td>function</td>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <td>unmount</td>
                                                <td>(ctx) =></td>
                                                <td>function</td>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <td>change</td>
                                                <td>(ctx) =></td>
                                                <td>function</td>
                                                <td>срабатывает при изменение прогресса</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </content>
    </div>
{% endblock %}