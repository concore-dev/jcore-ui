{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        // "skipLibCheck": true,
        "esModuleInterop": true,
        // "allowSyntheticDefaultImports": true,
        "strict": true,
        // "forceConsistentCasingInFileNames": true,
        // "moduleResolution": "node",
        // "resolveJsonModule": true,
        // "isolatedModules": true,
        "noEmit": false,
        // "jsx": "react",
        "module" : "commonjs",
        // "strictNullChecks": false,
        "typeRoots": [
            "node_modules/@types",
            "typings/**/*"
        ],
        "noImplicitThis": false,
        // "rootDir": "."
        // "baseUrl": "."
        "outDir": "./bin",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "bin",
        "coverage",
        "jest.config.js",
        "config"
    ],
    "include": [
        // "**/*.ts",
        "./typings/**/*.ts",
        "./lib/**/*.ts",
        // "./src/**/*.ts",
        // "./tests/**/*.ts"
    ]
}